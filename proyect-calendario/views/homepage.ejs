<table class="table">
  <thead>
  <tr>

    <th>Hora</th>
    <% for(var i=0;i< fechas.length;i++){ %>
    <% if(i==0){%><th>Domingo </br> <%=dateFormat(fechas[i],'mm-dd')%></th><%}%>
    <% if(i==1){%><th>Lunes </br> <%=dateFormat(fechas[i],'mm-dd')%></th><%}%>
    <% if(i==2){%><th>Martes </br> <%=dateFormat(fechas[i],'mm-dd')%></th><%}%>
    <% if(i==3){%><th>Miercoles </br> <%=dateFormat(fechas[i],'mm-dd')%></th><%}%>
    <% if(i==4){%><th>Jueves </br> <%=dateFormat(fechas[i],'mm-dd')%></th><%}%>
    <% if(i==5){%><th>Viernes </br> <%=dateFormat(fechas[i],'mm-dd')%></th><%}%>
    <% if(i==6){%><th>SÃ¡bado </br> <%=dateFormat(fechas[i],'mm-dd')%></th><%}%>
    <%}%>
  </tr>
  </thead>
  <tbody>
  <% for(var i=6;i< 24;i++){ %>
  <tc >
    <tr class="filaCalendario">
      <td>
        <%=i%>:00
      </td>
      <%for(var k=0;k< 7;k++){%>
      <td >

        <%for(var j=0;j< horarios.length;j++){%>
          <%  if(horarios[j].fechaNotificacion.getHours()==i&&horarios[j].fechaNotificacion.getDay()==k){%>
            <div class="horario">
              <%=horarios[j].fkIdMateria.nombre%>
              </br>
              <%=horarios[j].descripcion  %>
            </div>
          <%} %>
        <%} %>
      </td>
      <%} %>
    </tr>
  </tc>
  <%}%>
  </tbody>
</table>

