<h1>Editar Materia</h1>

<form action="/Materia/editarMateria" method="post">

  <input hidden
         class="form-control"
         type="text"
         id="id"
         name="id"
         value="<%= materia.id %>">

  <div class="form-group row">
    <label for="nombre" class="col-2 col-form-label">Nombre</label>
    <div class="col-10">
      <input class="form-control"
             type="text"
             placeholder="Ingrese el nombre de la materia"
             id="nombre"
             name="nombre"
             value="<%= materia.nombre %>">
    </div>
  </div>

  <div class="form-group row">
    <label for="descripcion" class="col-2 col-form-label">Descripcion</label>
    <div class="col-10">
      <input class="form-control" type="text"
             placeholder="Ingrese una descripciÃ³n"
             name="descripcion"
             id="descripcion"
             value="<%= materia.descripcion %>">
    </div>
  </div>

  <input hidden class="form-control" type="text"
         name="fkIdPeriodoAcademico"
         id="fkIdPeriodoAcademico"
         value="<%= materia.fkIdPeriodoAcademico %>">

  <button
    class="btn btn-outline-success">Editar</button>

  <button type="reset"
          class="btn btn-outline-warning">Reset</button>

</form>
