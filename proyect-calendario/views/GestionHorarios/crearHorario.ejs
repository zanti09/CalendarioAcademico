<h1>Crear Materia</h1>

<form action="/Horario/crearHorario" method="post">

  <div class="form-group row">
    <label for="fkIdMateria" class="col-2 col-form-label">Materia</label>
    <div class="col-10">
      <select class="form-control" id="fkIdMateria" name="fkIdMateria">
        <% for(var i=0;i<materias.length;i++){ %>
          <option value="<%=materias[i].id%>"><%=materias[i].nombre%></option>
        <%}%>
      </select>
    </div>
  </div>

  <div class="form-group row">
    <label for="dia" class="col-2 col-form-label">Dia</label>
    <div class="col-10">
      <select class="form-control" id="dia" name="dia">
        <option value="0">Domingo</option>
        <option value="1">Lunes</option>
        <option value="2">Martes</option>
        <option value="3">Miercoles</option>
        <option value="4">Jueves</option>
        <option value="5">Viernes</option>
        <option value="6">Sabado</option>
      </select>
    </div>
  </div>

  <div class="form-group row">
    <label for="horaInicio" class="col-2 col-form-label">Hora de inicio</label>
    <div class="col-10">
      <input class="form-control" type="time" value="12:00:00" id="horaInicio" name="horaInicio">
    </div>
  </div>

  <div class="form-group row">
    <label for="horaFin" class="col-2 col-form-label">Hora de Fin</label>
    <div class="col-10">
      <input class="form-control" type="time" value="12:00:00" id="horaFin" name="horaFin">
    </div>
  </div>

  <button
    class="btn btn-outline-success">Crear</button>

  <button type="reset"
          class="btn btn-outline-warning">Reset</button>

</form>
