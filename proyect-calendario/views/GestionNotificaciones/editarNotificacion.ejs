<h1>Editar Notificaci贸n</h1>

<form action="/Notificacion/editarNotificacion" method="post">

  <input hidden
         class="form-control"
         type="text"
         id="id"
         name="id"
         value="<%= notificacion.id %>">

  <div class="form-group row">
    <label for="fkIdMateria" class="col-2 col-form-label">Materia</label>
    <div class="col-10">
      <select class="form-control" id="fkIdMateria" name="fkIdMateria" >
        <% for(var i=0;i<materias.length;i++){ %>
        <option value="<%=materias[i].id%>"
          <% if (notificacion.fkIdMateria==materias[i].id)'selected'
          %>>
          <%=materias[i].nombre%></option>
        <%}%>
      </select>
    </div>
  </div>
  <div class="form-group row">
    <label for="descripcion" class="col-2 col-form-label">Descripci贸n</label>
    <div class="col-10">
      <input class="form-control"
             type="text"
             placeholder="Ingrese el nombre de la notificaci贸n"
             id="descripcion"
             name="descripcion"
             value="<%= notificacion.descripcion %>">
    </div>
  </div>
  <div class="form-group row">
    <label for="estado" class="col-2 col-form-label">Estado</label>
    <div class="col-10">
      <select class="form-control" id="estado" name="estado">
        <option value="En progreso" <% if (notificacion.estado=="En progreso")'selected'
        %>>En progreso</option>
        <option value="Realizada" <% if (notificacion.estado=="Realizada")'selected'
        %>>Realizada</option>
      </select>
    </div>
  </div>

  <div class="form-group row">
    <label for="fechaNotificacion" class="col-2 col-form-label">Fecha de notificaci贸n</label>
    <div class="col-10">
      <input class="form-control" type="datetime" value="<%=dateFormat(notificacion.fechaNotificacion ,'yyyy-mm-dd HH:MM')%>" id="fechaNotificacion" name="fechaNotificacion">
    </div>
  </div>

  <button
    class="btn btn-outline-success">Editar</button>

  <button type="reset"
          class="btn btn-outline-warning">Reset</button>

</form>
